{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  
  "build": {
    "env": {
      "NEXT_PUBLIC_SITE_URL": "https://www.xn----9sb8ajp.xn--p1ai"
    }
  },
  
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/image/(.*)",
      "headers": [
